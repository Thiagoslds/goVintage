        <%= image_tag "phillip-goldsberry-fZuleEfeA1Q-unsplash.jpg", width: 300 %>
      </div>
      <div class="card-text">
          <p><%= link_to product.name,  product_path(product) %></p>
          <p>R$ <%= product.price %>0</p>
          <%# <p>Vendida por <%= product.user.name %>
          
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

