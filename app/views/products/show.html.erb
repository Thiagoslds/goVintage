<div class="product-all row">
  <div class="img-product col-12 col-lg-6">
    <%= cl_image_tag @product.image.key, height: 400, width: 600, crop: :fill %>
  </div>



  <div class="info-product col-12 col-lg-6">
    <h1><%= @product.name %></h1>
    <div class="details-product d-flex flex-column">
      <p id="description"><%= @product.description %></p>
      <p id="price">R$ <%= @product.price %></p>
    </div>
    <div class="btn-style">
      <button class="button"><%= link_to "Criar Novo AnÃºncio",  new_product_path(@product), class: 'btn-book' %></button>
        <% if @product.user != current_user || @product.sold == false%>
          <button><%= link_to "Comprar",  product_sales_path(@product), method: :post, class: 'btn-book' %></button>
        <% else %>
          <button><%= link_to "Editar",  edit_product_path(@product), method: :get, class: 'btn-book' %></button>
      <% end %>
    </div>
  </div>
</div>


