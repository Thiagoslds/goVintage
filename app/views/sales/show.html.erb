

<div class="product-all row">
  <div class="img-product col-12 col-lg-6">
    <%= cl_image_tag @sale.product.image.key, height: 400, width: 600, crop: :fill %>
  </div>



  <div class="info-product col-12 col-lg-6">
    <h1><%= @sale.product.name %></h1>
    <div class="details-product d-flex flex-column">
      <p id="description"><%= @sale.product.description %></p>
      <p id="price">R$ <%= @sale.product.price %>0</p>
    </div>
    <div class="details-product d-flex flex-column">
      <p id="description">Vendido por: <%= @sale.product.user.name %></p>
      <p id="description">Comprador: <%= @sale.user.name %></p>
    </div>
    
  </div>
</div>